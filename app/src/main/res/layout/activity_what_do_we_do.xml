                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck,VisualLintOverlap" />

            <TextView
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="525dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/alternatively"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="555dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/you_can_also_contribute_through_donations_of_grocery_products_blankets_clothing_stationary_or_school_shoes_recommendations_on_other_products_are_also_welcome_contact_us_for_specific_product_donation_and_we_can_share_our_database_of_beneficiaries_so_that_no_donations_go_to_waste"
