                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck,VisualLintOverlap" />

            <TextView
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="670dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/please_note"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="700dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/we_do_not_recommend_cash_donations_deposits_through_our_official_bank_account_allows_us_to_track_all_receipts_from_our_generous_donors"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck,VisualLintOverlap" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>